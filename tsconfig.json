{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@helper/*": ["src/helper/*"],
      "@interface/*": ["src/interface/*"],
      "@modules/*": ["src/modules/*"],
      "@server/*": ["src/server/*"],
      "@shared/*": ["src/shared/*"],
      "@styles/*": ["src/styles/*"],
      "@reducer/*": ["src/reducer/*"],
      "@middlewares/*": ["src/middlewares/*"]
    },
    "types": ["node", "lodash"]
  },
  "TypeRoots": ["node_modules/@types"],
  "include": ["./src/**/*"],
  "lib": [
    //    "es5",
    "es2018",
    "dom",
    "es6"
  ],
  "exclude": ["node_modules", "build", "scripts"]
}
